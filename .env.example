# Micro ADK Framework Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM API Keys (at least one required)
# =============================================================================

# Google Gemini API Key (for gemini/* models)
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Key (for openai/* models)
OPENAI_API_KEY=

# Anthropic API Key (for anthropic/* models)
ANTHROPIC_API_KEY=

# =============================================================================
# Database Configuration (optional - defaults work for docker-compose)
# =============================================================================

# PostgreSQL connection
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=micro_adk

# =============================================================================
# Custom Paths (optional - override defaults)
# =============================================================================

# Path to main config file (default: ./config/config.yaml)
# MICRO_ADK_CONFIG_PATH=/path/to/config.yaml

# Path to agents directory (default: ./agents)
# MICRO_ADK_AGENTS_DIR=/path/to/agents

# Path to tools manifest (default: ./tools/manifest.yaml)
# MICRO_ADK_TOOLS_MANIFEST=/path/to/manifest.yaml

# =============================================================================
# Runtime Configuration (optional)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Server port
PORT=8000
